# Apache configuration for Node.js application in public_html

# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Prevent access to sensitive files
    RewriteRule ^\.env$ - [F,L]
    RewriteRule ^node_modules/ - [F,L]
    RewriteRule ^prisma/migrations/ - [F,L]
    RewriteRule ^src/ - [F,L]
    
    # Allow access to public directory for static files
    RewriteCond %{REQUEST_URI} ^/public/ [OR]
    RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|svg|woff|woff2|ttf|ico)$
    RewriteRule ^ - [L]
    
    # Proxy all API requests to Node.js application
    # IMPORTANT: Update localhost:4000 to match your Node.js server configuration
    # - For local development: http://localhost:4000
    # - For production with different port: http://localhost:YOUR_PORT
    # - For separate server: http://your-server-ip:PORT
    # Check your hosting documentation for the correct Node.js application URL
    RewriteCond %{REQUEST_URI} ^/api/ [OR]
    RewriteCond %{REQUEST_URI} ^/(categories|jobs|auth|quotes|health)
    RewriteRule ^(.*)$ http://localhost:4000/$1 [P,L]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # HTTPS enforcement (uncomment if using HTTPS)
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Deny access to sensitive files
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "^(package\.json|package-lock\.json|nodemon\.json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Enable GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Set cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Charset
AddDefaultCharset UTF-8
