# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/vargos_db?schema=public"

# Server Configuration
PORT=4000
NODE_ENV=production

# JWT Secret (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Quote-specific rate limiting
QUOTE_RATE_LIMIT_MAX=50
QUOTE_RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
