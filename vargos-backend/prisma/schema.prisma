generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  categories Category[]
  jobs       Job[]
  quotes     Quote[]
  templates  Template[]
}

model Template {
  id         Int      @id @default(autoincrement())
  name       String
  defaults   Json?
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  @@index([categoryId])
  @@index([userId])
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  order Int    @default(0)

  userId Int
  user   User @relation(fields: [userId], references: [id])

  jobs      Job[]
  templates Template[]

  @@index([userId])
  @@index([order])
}

model Job {
  id    Int    @id @default(autoincrement())
  name  String
  unit  String
  price Float

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@index([categoryId])
  @@index([userId])
}

model Quote {
  id        Int            @id @default(autoincrement())
  userId    Int
  user      User           @relation(fields: [userId], references: [id])
  name      String
  total     Float
  notes     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  items     QuoteItem[]
  versions  QuoteVersion[]

  @@index([userId])
  @@index([createdAt])
}

model QuoteItem {
  id      Int   @id @default(autoincrement())
  quoteId Int
  quote   Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  category String?
  room     String?
  job      String
  quantity Float
  price    Float
  total    Float

  materialPrice Float?
  laborPrice    Float?
  templateId    Int?

  @@index([quoteId])
}

model QuoteVersion {
  id          Int      @id @default(autoincrement())
  quoteId     Int
  quote       Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  versionNum  Int
  name        String
  total       Float
  notes       String?
  snapshotData Json
  createdAt   DateTime @default(now())
  changeSummary String?

  @@index([quoteId])
  @@index([createdAt])
  @@unique([quoteId, versionNum])
}
