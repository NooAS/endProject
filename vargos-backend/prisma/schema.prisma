generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int    @id @default(autoincrement())
  name      String
  order     Int
  isDefault Boolean @default(false)
  jobs      Job[]
}


model Job {
  id          Int      @id @default(autoincrement())
  name        String
  unit        String
  price       Float
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

