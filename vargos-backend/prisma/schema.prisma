generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  categories Category[]
  jobs       Job[]
  quotes     Quote[]
  templates  Template[]
}

model Template {
  id         Int      @id @default(autoincrement())
  name       String
  defaults   Json?
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  order Int    @default(0)

  userId Int
  user   User @relation(fields: [userId], references: [id])

  jobs      Job[]
  templates Template[]

  @@index([userId])
}

model Job {
  id    Int    @id @default(autoincrement())
  name  String
  unit  String
  price Float

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Quote {
  id          Int            @id @default(autoincrement())
  userId      Int
  user        User           @relation(fields: [userId], references: [id])
  name        String
  total       Float
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  version     Int            @default(1)
  config      Json?
  items       QuoteItem[]
  versions    QuoteVersion[]

  @@index([userId, createdAt])
  @@index([userId, name])
}

model QuoteItem {
  id      Int   @id @default(autoincrement())
  quoteId Int
  quote   Quote @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  category String?
  room     String?
  job      String
  quantity Float
  price    Float
  total    Float

  materialPrice Float?
  laborPrice    Float?
  templateId    Int?
}

model QuoteVersion {
  id        Int      @id @default(autoincrement())
  quoteId   Int
  quote     Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  version   Int
  name      String
  total     Float
  notes     String?
  config    Json?
  data      Json
  createdAt DateTime @default(now())

  @@index([quoteId, version])
}
